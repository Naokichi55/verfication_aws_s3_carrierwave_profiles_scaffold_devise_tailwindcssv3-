<% content_for :title, "Rackets" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Rackets</h1>
    <%= link_to "New racket", new_racket_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="rackets" class="min-w-full">
    <% if @rackets.any? %>
      <% @rackets.each do |racket| %>
        <%= render racket %>
        <p>
          <%= link_to "Show this racket", racket, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
        </p>
      <% end %>
    <% else %>
      <p class="text-center my-10">No rackets found.</p>
    <% end %>
  </div>
</div>
<% if user_signed_in? %>
  <%= link_to "プロフィール投稿画面へ", new_profile_path %>
  <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete} %>
  <% if current_user.own?(@profile) %>
      <%= link_to 'プロフィール画面', profile_path(current_user.profile) %>
  <% else %>
      <%= link_to 'プロフィール投稿画面', new_profile_path %>
  <% end %>
<% else %>
  <%= link_to "ログイン画面", user_session_path %>
  <%= link_to "ユーザー登録画面",  new_user_registration_path %>
<% end %>


